<html lang="en" dir="rtl">
<head>
    <title>{{app.title}}</title>

    {{> header}}

    <link href="/cv-static/2/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="/cv-static/2/css/style.css" rel="stylesheet" type="text/css"/>
    <link href="/cv-static/1/css/icons.css" rel="stylesheet" type="text/css"/>


</head>

<body id="data">
<h3 class="title">
    {{app.title}}
</h3>
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="text-right colon">
                        {{i18n "section_personal_detail_title"}}
                    </h5>
                    <div class="row items-row">
                        <div class="col-4 field-name colon">
                            {{i18n "section_personal_detail_title"}}
                        </div>
                        <div class="col field-value ">
                            {{userProfile.fullName}}
                        </div>
                    </div>
                    <div class="row items-row">
                        <div class="col-4 field-name colon">
                            {{i18n "personal_phoneNumber"}}
                        </div>
                        <div class="col field-value">
                            {{user.phoneNumber}}
                        </div>
                    </div>
                    <div class="row items-row">
                        <div class="col-4 field-name colon">
                            {{i18n "personal_email"}}
                        </div>
                        <div class="col field-value">
                            <!--email_off-->{{user.email}}<!--/email_off-->
                        </div>
                    </div>
                    <div class="row items-row">
                        <div class="col-4 field-name colon">
                            {{i18n "section_personal_detail_identity"}}
                        </div>
                        <div class="col field-value">
                            {{user.identity}}
                        </div>
                    </div>
                    <div class="row items-row">
                        <div class="col-4 field-name colon">
                            {{i18n "section_personal_detail_birth_day"}}
                        </div>
                        <div class="col field-value">
                            {{userProfile.birthday}}
                        </div>
                    </div>
                    <div class="row items-row">
                        <div class="col-4 field-name colon">
                            {{i18n "section_personal_detail_city"}}
                        </div>
                        <div class="col field-value">
                            {{userProfile.city}}
                        </div>
                    </div>
                </div>
                <div class="col">

                    <h5 class="text-right colon">
                        {{i18n "section_language_experiences_title"}}
                    </h5>

                    {{#each userProfile.languageExperiences}}
                        <div class="row items-row">
                            <div class="col-4 field-name colon">
                                {{i18n (concat "section_language_experiences_language" id)  }}
                            </div>
                            <div class="col">
                                <div class="progress language-experience-progress">
                                    <div aria-valuemax="100" aria-valuemin="0"
                                         aria-valuenow="{{math 25 "*" experience}}"
                                         class="progress-bar language-experience-value"
                                         role="progressbar" style="width: {{math 20 "*" experience}}%;">
                                        {{experience}}/5
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="card" style="margin-top: 20px;">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="text-right colon">
                        {{i18n "section_experience_work"}}
                    </h5>
                    {{#each userProfile.workExperiences}}
                        <div class="row items-row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        {{startDate}}
                                        <i class="icon uil-arrow-left"></i>
                                        {{endDate}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        {{place}}
                                    </div>
                                    <div class="col">
                                        {{role}}
                                    </div>
                                </div>
                            </div>
                            <div class="col"></div>
                        </div>
                    {{/each}}
                </div>

                <div class="col">
                    <h5 class="text-right colon">
                        {{i18n "section_experience_volunteer"}}
                    </h5>
                    {{#each userProfile.volunteerExperiences}}
                        <div class="row items-row">
                            <div class="col">
                                <div class="row">
                                    <div class="col">
                                        {{startDate}}
                                        <i class="icon uil-arrow-left"></i>
                                        {{endDate}}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        {{place}}
                                    </div>
                                    <div class="col">
                                        {{role}}
                                    </div>
                                </div>
                            </div>
                            <div class="col"></div>
                        </div>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
    <div class="card" style="margin-top: 20px;">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="text-right colon">
                        {{i18n "section_skills_skills"}}
                    </h5>
                    {{#each userProfile.skills}}
                        <div class="row">

                            <div class="col">
                                <div class="form-group form-check skill-checkbox-container">
                                    <input
                                        {{isSkillAvailable isAvailable}}
                                            type="checkbox"
                                            class="form-check-input skill-checkbox"
                                            id="{{id}}"
                                            onclick="return false;"
                                    >
                                    <label class="form-check-label" for="{{id}}">
                                        {{i18n (concat "skills" id)}}
                                    </label>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div class="col">
                    <h5 class="text-right colon">
                        {{i18n "section_skills_computer"}}
                    </h5>
                    {{#each userProfile.computerSkills}}
                        <div class="row">

                            <div class="col">
                                <div class="form-group form-check skill-checkbox-container">
                                    <input
                                        {{isSkillAvailable isAvailable}}
                                            type="checkbox"
                                            class="form-check-input skill-checkbox"
                                            id="computer_{{id}}"
                                            onclick="return false;"
                                    >
                                    <label class="form-check-label" for="computer_{{id}}">
                                        {{i18n (concat "computer-skills" id)}}
                                    </label>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col button">
            <button type="button" style="width: 100%;" id="print-button" class="btn btn-primary" onclick="toPdf()">
                {{i18n "navBar_print"}}
            </button>
        </div>
    </div>
</div>
<script src="/cv-static/2/js/print.min.js"></script>
<script src="/cv-static/2/js/app.js"></script>


</body>
</html>
